<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_10"
    android:orientation="vertical"
    tools:context=".Activity.Add.ActivityAddNewMemoir">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout style="@style/style__activity_add_new_memoir__layout_text_input">

                <android.support.design.widget.TextInputLayout
                    style="@style/custom_OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id__activity_add_new_memoir__txt_name"
                        style="@style/style__activity_add_new_memoir__text_input"
                        android:hint="@string/name"
                        android:text="نام خاطره" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout style="@style/style__activity_add_new_memoir__layout_text_input">

                <android.support.design.widget.TextInputLayout
                    style="@style/custom_OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id__activity_add_new_memoir__txt_link"
                        style="@style/style__activity_add_new_memoir__text_input"
                        android:hint="@string/link"
                        android:text="link_memoir" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout style="@style/style__activity_add_new_memoir__layout_text_input">

                <android.support.design.widget.TextInputLayout
                    style="@style/custom_OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id__activity_add_new_memoir__txt_date"
                        style="@style/style__activity_add_new_memoir__text_input"
                        android:hint="@string/date"
                        android:text="1358" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout style="@style/style__activity_add_new_memoir__layout_text_input">

                <android.support.design.widget.TextInputLayout
                    style="@style/custom_OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id__activity_add_new_memoir__txt_text"
                        style="@style/style__activity_add_new_memoir__text_input"
                        android:layout_marginBottom="2dp"
                        android:hint="@string/text"
                        android:inputType="textMultiLine"
                        android:text="متن خاطره" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/id__activity_add_new_memoir__spinner_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    app:ms_background_color="@color/grey_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="end">

                <CheckBox
                    android:id="@+id/id__activity_add_new__memoir__chk_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dubai_bold"
                    android:text="@string/ostensible"
                    android:textColor="@color/COLOR_BLACK" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/id__activity_add_new_memoir__btn_cancel"
                    style="@style/style__activity_add_new_memoir__btn"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/id__activity_add_new_memoir__btn_record"
                    style="@style/style__activity_add_new_memoir__btn"
                    android:text="@string/record" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>